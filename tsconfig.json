{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"importHelpers": true,
		"esModuleInterop": true,
		"declaration": true,
		"baseUrl": ".",
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src/**/*.ts", "src/**/*.vue", "vue-shim.d.ts"],
	"exclude": ["node_modules", "dist"]
}
