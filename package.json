{
	"name": "vue-scrolling-table",
	"version": "1.0.2",
	"description": "A Vue component to create tables with vertical and horizontal scrolling. Flexbox-based.",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/richardtallent/vue-scrolling-table"
	},
	"homepage": "https://tallent.us/vue-scrolling-table/",
	"private": false,
	"main": "./dist/vue-scrolling-table.umd.js",
	"module": "./dist/vue-scrolling-table.es.js",
	"types": "./dist/vue-scrolling-table.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/vue-scrolling-table.es.js",
			"require": "./dist/vue-scrolling-table.umd.js"
		}
	},
	"scripts": {
		"dev": "vite",
		"devs": "vite --https",
		"builddx": "vuedx-typecheck . && vite build",
		"build": "vite build"
	},
	"dependencies": {
		"vue": "^3.0.5"
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^4.14.2",
		"@vitejs/plugin-vue": "^1.1.4",
		"@vue/compiler-sfc": "^3.0.5",
		"@vuedx/typecheck": "^0.4.1",
		"@vuedx/typescript-plugin-vue": "^0.4.1",
		"autoprefixer": "^10.2.4",
		"eslint": "^7.19.0",
		"eslint-config-tabsanity": "^2.0.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-vue": "^7.5.0",
		"postcss": "^8.2.4",
		"prettier": "^2.2.1",
		"stylelint": "^13.9.0",
		"stylelint-config-standard": "^20.0.0",
		"typescript": "^4.1.3",
		"vite": "^2.0.0-beta.64"
	},
	"eslintConfig": {
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/prettier",
			"tabsanity"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 180
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"exclude": [
			"dist"
		],
		"rules": {
			"indentation": "tab",
			"declaration-block-trailing-semicolon": null,
			"no-descending-specificity": null
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie < 11",
		"maintained node versions"
	]
}
